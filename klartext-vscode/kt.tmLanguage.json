{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "klartext",
	"scopeName": "source.klartext",
	"patterns": [
		{
			"include": "#comments"
		},		
		{
			"include": "#directives"
		},
		{
			"include": "#tags"
		},
		{
			"include": "#links"
		},		
		{
			"include": "#markdown"
		}
	],
	"repository": {
		"directives": {
			"patterns": [{
				"name": "entity.name",				
				"match": "^\\s*(!(include|import))\\s+(\"[^\"]+\")(\\s+(as)\\s+(\\w+))?.*$",
				"captures": {
					"1": {
						"patterns": [{
							"match": ".*",
							"name": "entity.name.function.macro.kt"
						}]
					},
					"3": {
						"patterns": [{
							"name": "string.quoted.double.kt",
							"begin": "\"",
							"end": "\""	
						}]
					},
					"5": {
						"patterns": [{
							"match": ".*",
							"name": "entity.name.function.macro.kt"
						}]
					},
					"6": {
						"patterns": [{
							"match": ".*",
							"name": "entity.name.namespace.kt"
						}]
					}
				}
			}]
		},
		"string": {
			"patterns": [{
				"name": "string.quoted.double.kt",
				"begin": "\"",
				"end": "\""		
			}]
		},
		"tags": {
			"patterns": [{
				"name": "entity.name",				
				"match": "^\\s*(\\w+\\:\\:)?(([\\w_-]+)(\\.[\\w_-]+)?(((:)\\s+(#(\\w+\\:\\:)?[\\w\\-_\\.]+)?|((>)\\s+((\\w+\\:\\:)?[\\w\\-_\\.]+)))))\\s*(\\[[a-zA-Z]{2,3}(-[a-zA-Z]{2,3})?\\])?\\s*(([\\w\\-_]+\\s*=\\s*\"[^\"]*\"\\s*)*)(.*)$",
				"captures": {
					"1":  { "name": "entity.name.namespace.kt"},
					"2":  { "name": "entity.name.tag.kt" },
					"7":  { "name": "entity.name.tag.kt"},
					"8":  { "name": "comment.line.kt"},
					"11":  { "name": "entity.name.tag.kt"},
					"12":  { "name": "comment.line.kt"},
					"14":  { "name": "comment.line.kt"},
					"16":  { "name": "entity.other.attribute-name.kt",
							"patterns": [							
								{
									"match": ".*",
									"include": "#string"
								}
							]
						  },
					"17": {	"name": "entity.name.tag.kt" },
					"18": {	"name": "text.kt",
							"patterns": [{
								"include": "#markdown"
							}]
						  }
				}
			}]
		},		
		"markdown": {
			"name": "text.kt",
			"match": ".*",
			"captures": {
				"0": {
					"patterns": [
					{
						"name": "text.kt",
						"match": "(/r/)([^/]+)(/)",
						"captures": {
							"2": {
								"patterns": [{
									"match": ".*",
									"name": "comment.line.kt"
								}]
							}
						}
					},
					{
						"name": "text.kt",
						"match": "(/[^/]+/)([^/]+)(/)",
						"captures": {
							"2": {
								"patterns": [{
									"match": ".*",
									"name": "string.quoted.double.kt"
								}]
							}
						}
					},
					{
						"name": "markup.bold.markdown.kt",
						"match": "\\*.*\\*"
					},
					{
						"name": "markup.italic.markdown.kt",
						"match": "_.*_"
					},
					{
						"name": "markup.bold.kt",
						"begin": "\"",
						"end": "\""		
					},
					{
						"name": "text.kt",
						"match": "{([^}]+)}",
						"captures": {
							"1": {
								"patterns": [{
									"match": ".*",
									"name": "string.quoted.double.kt"
								}]
							}
						}
					}]
				}

			}
		},
		"comments": {
			"name": "comment.line.kt",
			"match": "^\\s*//.*"
		}
	}
}