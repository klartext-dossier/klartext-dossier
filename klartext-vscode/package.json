{
    "name": "klartext",
    "displayName": "klartext",
    "description": "Language support for klartext",
    "publisher": "emhaka",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.43.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "kt",
                "aliases": [
                    "klartext",
                    "kt"
                ],
                "extensions": [
                    ".kt",
                    ".dm"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "kt",
                "scopeName": "source.klartext",
                "path": "./kt.tmLanguage.json"
            }
        ]
    },
    "dependencies": {
        "vsce": "^2.10.0"
    }
}
