{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "klartext",
	"scopeName": "source.klartext",
	"patterns": [
		{
			"include": "#comments"
		},		
		{
			"include": "#directives"
		},
		{
			"include": "#tags"
		},
		{
			"include": "#links"
		},		
		{
			"include": "#markdown"
		}
	],
	"repository": {
		"directives": {
			"patterns": [{
				"name": "entity.name",				
				"match": "^\\s*(!(include|import))\\s+(\"[^\"]+\")(\\s+(as)\\s+(\\w+))?.*$",
				"captures": {
					"1": {
						"patterns": [{
							"match": ".*",
							"name": "entity.name.function.macro.kt"
						}]
					},
					"3": {
						"patterns": [{
							"name": "string.quoted.double.kt",
							"begin": "\"",
							"end": "\""	
						}]
					},
					"5": {
						"patterns": [{
							"match": ".*",
							"name": "entity.name.function.macro.kt"
						}]
					},
					"6": {
						"patterns": [{
							"match": ".*",
							"name": "entity.name.namespace.kt"
						}]
					}
				}
			}]
		},
		"string": {
			"patterns": [{
				"name": "string.quoted.double.kt",
				"begin": "\"",
				"end": "\""		
			}]
		},

		"links": {
			"patterns": [{
				"name": "entity.other.attribute-name.kt",
				"match": "^\\s*(\\w+)(>)(\\s[^\\s=]+\\s)?(.*)",
				"captures": {
					"1": {
						"patterns": [{
							"match": ".*",
							"name": "entity.name.tag.kt"
						}]
					},
					"2": {
						"patterns": [{
							"match": ".*",
							"name": "meta.tag.kt"
						}]
					},
					"3": {
						"patterns": [{
							"match": ".*",
							"name": "entity.name.type.kt"
						}]
					},
					"4": {
						"patterns": [{
							"match": ".*",
							"include": "#string"
						}]
					}
				}
			}]
		},
		"markdown": {
			"name": "text.kt",
			"match": ".*",
			"captures": {
				"0": {
					"patterns": [{
						"name": "text.kt",
						"match": "(/[^/]+/)([^/]+)(/)",
						"captures": {
							"2": {
								"patterns": [{
									"match": ".*",
									"name": "string.quoted.double.kt"
								}]
							}
						}
					},
					{
						"name": "markup.bold.markdown.kt",
						"match": "\\*.*\\*"
					},
					{
						"name": "markup.italic.markdown.kt",
						"match": "_.*_"
					},
					{
						"name": "markup.bold.kt",
						"begin": "\"",
						"end": "\""		
					},
					{
						"name": "text.kt",
						"match": "{([^}]+)}",
						"captures": {
							"1": {
								"patterns": [{
									"match": ".*",
									"name": "string.quoted.double.kt"
								}]
							}
						}
					}]
				}

			}
		},
		"comments": {
			"name": "comment.line.kt",
			"match": "^\\s*//.*"
		}
	}
}