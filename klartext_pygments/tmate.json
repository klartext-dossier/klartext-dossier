{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "klartext",
	"scopeName": "source.klartext",
	"patterns": [
		{
			"include": "#comments"
		},		
		{
			"include": "#directives"
		},
		{
			"include": "#tags"
		},
		{
			"include": "#links"
		},		
		{
			"include": "#markdown"
		}
	],
	"repository": {

		"markdown": {
			"name": "text.kt",
			"match": ".*",
			"captures": {
				"0": {
					"patterns": [{
						"name": "text.kt",
						"match": "(/[^/]+/)([^/]+)(/)",
						"captures": {
							"2": {
								"patterns": [{
									"match": ".*",
									"name": "string.quoted.double.kt"
								}]
							}
						}
					},
					{
						"name": "markup.bold.markdown.kt",
						"match": "\\*.*\\*"
					},
					{
						"name": "markup.italic.markdown.kt",
						"match": "_.*_"
					},
					{
						"name": "markup.bold.kt",
						"begin": "\"",
						"end": "\""		
					},
					{
						"name": "text.kt",
						"match": "{([^}]+)}",
						"captures": {
							"1": {
								"patterns": [{
									"match": ".*",
									"name": "string.quoted.double.kt"
								}]
							}
						}
					}]
				}

			}
		},
		"comments": {
			"name": "comment.line.kt",
			"match": "^\\s*//.*"
		}
	}
}