<?xml version="1.0" encoding="UTF-8" ?>

<xsd:schema	xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns="http://www.hoelzer-kluepfel.de/dossier" targetNamespace="http://www.hoelzer-kluepfel.de/dossier" xmlns:xhtml="http://www.w3.org/1999/xhtml" elementFormDefault="qualified">

	<xsd:import namespace="http://www.w3.org/1999/xhtml" schemaLocation="htmlbook.xsd"/>	

    <xsd:complexType name="content" mixed="true">
		<xsd:sequence>
			<xsd:choice minOccurs="0" maxOccurs="unbounded">
				<xsd:group ref="xhtml:blockelements"/>
				<xsd:group ref="xhtml:inlineelements"/>
			</xsd:choice>
		</xsd:sequence>
		<xsd:attribute name="id" type="xsd:ID"/>
		<xsd:attribute name="lang" type="xsd:string"/>
    </xsd:complexType>

	<xsd:element name="g" type="xsd:string"/>

	<xsd:element name="ref">
		<xsd:complexType>
			<xsd:complexContent>
				<xsd:extension base="content">
					<xsd:attribute name="target" type="xsd:IDREF" use="required"/>
					<xsd:attribute name="tag" type="xsd:string" use="optional"/>
				</xsd:extension>
			</xsd:complexContent>
		</xsd:complexType>
    </xsd:element>

</xsd:schema>
